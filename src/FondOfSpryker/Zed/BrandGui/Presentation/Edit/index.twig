{% extends '@BrandGui/Create/index.twig' %}

{% set widget_title = 'Edit Brand' | trans ~ ': ' ~ aggregateForm.brand.idBrand.vars.value %}

{% block action %}
    {{ parent() }}
    {% if idBrand is defined %}
        {{ viewActionButton(url('/brand-gui/export', {'id-brand': idBrand}), 'Export' | trans) }}
        {{ removeActionButton(url('/brand-gui/delete', {'id-brand': idBrand}), 'Remove Brand' | trans) }}
    {% endif %}
{% endblock %}
{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-brand-assign.js') }}"></script>
{% endblock %}