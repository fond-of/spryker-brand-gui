{% extends '@Gui/Layout/layout.twig' %}

{% if widget_title is not defined %}
    {% set widget_title = 'Create a Brand' | trans %}
{% endif %}

{% block head_title -%}
    {{ widget_title }}
{%- endblock %}

{% block section_title %}{{ widget_title }}{% endblock %}

{% block action %}
    {{ parent() }}
    {{ backActionButton(url('/brand-gui'), 'Back to Brands' | trans) }}
{% endblock %}

{% block content %}
    {{ form_start(aggregateForm) }}

    {{ tabs(
        brandAggregationTabs,
        {
            'aggregateForm': aggregateForm,
            'brandForm': aggregateForm.brand,
            'brandCustomerRelationForm': aggregateForm.brandCustomerRelation,
            'availableCustomerRelationTabs': availableCustomerRelationTabs,
            'assignedCustomerRelationTabs': assignedCustomerRelationTabs,
            'availableCustomerTable': availableCustomerTable,
            'assignedCustomerTable': assignedCustomerTable,
            'brandCompanyRelationForm': aggregateForm.brandCompanyRelation,
            'availableCompanyRelationTabs': availableCompanyRelationTabs,
            'assignedCompanyRelationTabs': assignedCompanyRelationTabs,
            'availableCompanyTable': availableCompanyTable,
            'assignedCompanyTable': assignedCompanyTable
        }
    ) }}

    {{ form_end(aggregateForm) }}
{% endblock %}


